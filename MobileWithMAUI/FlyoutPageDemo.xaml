<?xml version="1.0" encoding="utf-8"?>

<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            FlyoutLayoutBehavior="SplitOnLandscape"
            x:Class="MobileWithMAUI.FlyoutPageDemo">

    <FlyoutPage.Flyout>
        <ContentPage Title="Flyout menu" BackgroundColor="Aqua">
            <Label Text="Submenu" FontSize="Large"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center">
            </Label>
        </ContentPage>

    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <ContentPage BackgroundColor="Gold">
            <Label Text="Details" HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" FontSize="Large">
            </Label>
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>
